<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="40dp">

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spinnerStartStop"
            android:gravity="center"
            android:textAlignment="center"

            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_width="152dp"
            android:layout_margin="8dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/logo_home"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/spinnerStartStop"
            android:layout_toEndOf="@+id/spinnerStartStop"
            android:id="@+id/imageView2"
            android:layout_margin="8dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="40dp">

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spinnerEndStop"
            android:layout_below="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <ImageView
            app:srcCompat="@drawable/logo_flag"
            android:layout_alignTop="@+id/spinnerEndStop"
            android:layout_toRightOf="@+id/spinnerEndStop"
            android:layout_toEndOf="@+id/spinnerEndStop"
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="8dp" />

    </LinearLayout>

    <Button
        android:text="Heure d'arrivÃ©e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button3" />

    <Button
        android:text="Calculer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:id="@+id/resultTV"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:layout_gravity="center"
        android:visibility="gone" />
</LinearLayout>