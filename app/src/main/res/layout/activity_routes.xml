<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_routes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alexy.webservice.RoutesActivity">

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerStartStop"
        android:gravity="center"
        android:textAlignment="center"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_width="280dp" />

    <ImageView
        app:srcCompat="@drawable/logo_position"
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/logo_home"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/spinnerStartStop"
        android:layout_toEndOf="@+id/spinnerStartStop"
        android:id="@+id/imageView2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imageView"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spinnerEndStop"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/logo_flag"
        android:layout_alignTop="@+id/spinnerEndStop"
        android:layout_toRightOf="@+id/spinnerEndStop"
        android:layout_toEndOf="@+id/spinnerEndStop"
        android:id="@+id/imageView3"
        android:layout_marginTop="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView3"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:text="Calculer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

</RelativeLayout>
